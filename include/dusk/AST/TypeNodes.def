/// Type(Id, Parent)
///   For all non-abstract type nodes, it's enumerator name is
///   \c TypeKind::Id. The node's class name is \c Id##Type, the name
///   of the base class is \c Parent.

#ifndef ABSTRACT_TYPE
#define ABSTRACT_TYPE(Id, Parent)
#endif

#ifndef VALUE_TYPE
#define VALUE_TYPE(Id, Parent) TYPE(Id, Parent)
#endif

ABSTRACT_TYPE(Value, Type)
  VALUE_TYPE(Int, Value)
  VALUE_TYPE(Array, Value)
  VALUE_TYPE(InOut, Value)

TYPE(Void, Type)
TYPE(Function, Type)
TYPE(Pattern, Type)


#undef VALUE_TYPE
#undef ABSTRACT_TYPE
#undef TYPE
